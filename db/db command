# Create tables:
CREATE TABLE TYPE_BOOK(ID INTEGER PRIMARY KEY AUTOINCREMENT, NAME TEXT NOT NULL, AUTHOR TEXT NOT NULL, LINK TEXT NOT NULL, PROCESSED TEXT);
CREATE TABLE BOOK_DETAIL(ID INTEGER PRIMARY KEY AUTOINCREMENT, NAME TEXT NOT NULL, AUTHOR TEXT NOT NULL, PUBLISHER TEXT, ISBN TEXT, SUB_TITLE TEXT, YEAR TEXT, PAGE_NUMBER TEXT, PRICE TEXT, STYLE TEXT, SERIES TEXT, TRANSLATOR TEXT, RATINGS REAL, VOTE_PEOPLE INTEGER, STAR5 REAL, STAR4 REAL, STAR3 REAL, STAR2 REAL, STAR1 REAL, LABEL TEXT, PICTURE TEXT, LINK TEXT);

ALTER TABLE TYPE_BOOK ADD COLUMN LINK TEXT;

INSERT INTO TYPE_BOOK (NAME, AUTHOR, LINK) VALUES('Dylan', 'Freedom Book - 自由之书', 'http://www.mybooksite.cc')

UPDATE TYPE_BOOK SET TYPE='FREE TYPE' WHERE ID=1;

SELECT * FROM TYPE_BOOK;

ALTER TABLE TYPE_BOOK ADD PROCESSED TEXT;

UPDATE TYPE_BOOK SET PROCESSED='N';

